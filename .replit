modules = ["python-3.10"]

[nix]
channel = "stable-24_05"
packages = ["geckodriver", "xcodebuild", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Lottery Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "install_and_run"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Simple Bot Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Working Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Updated Lottery Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Updated Lottery Bot Python 3.10"

[[workflows.workflow]]
name = "Lottery Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add python-telegram-bot requests beautifulsoup4 && python main.py"

[[workflows.workflow]]
name = "install_and_run"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add python-telegram-bot requests beautifulsoup4 && python main.py"

[[workflows.workflow]]
name = "Simple Bot Test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python simple_bot.py"

[[workflows.workflow]]
name = "Working Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python working_bot.py"

[[workflows.workflow]]
name = "Updated Lottery Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python updated_lottery_bot.py"

[[workflows.workflow]]
name = "Updated Lottery Bot Python 3.10"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3.10 updated_lottery_bot.py"

[deployment]
run = ["sh", "-c", "uv add python-telegram-bot requests beautifulsoup4 && python main.py"]
